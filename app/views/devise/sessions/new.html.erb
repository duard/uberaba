
<h2><span>Sign in</span></h2>
<div class="row-fluid">

  <div class="span6 bordered">
    <strong>Log in:</strong>
    <br>
    <br>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:multipart => true , :class => 'form-horizontal  form-flexible' }) do |f| %>
      <div class="control-group">

          <label class="control-label" for="loginEmail">Email</label>


        <div class="controls">
          <%= f.text_field :email, :required => false, :autofocus => true, :class => "input-flexible" %>
        </div>
      </div>

        <%= f.input :password, :required => false   %>
        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <!-- </div> -->
      <div class="control-group">
          <div class="controls">
            <%= f.button :submit, t('devise.botoes.sign_in')%>
          </div>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>

  <div class="span6">
    <strong>Create an account if you are new here: </strong>
    <br>
    <br>
  </div>
</div>
<hr>
<%= render "shareduser/usuario" %>
<%= render "devise/shared/links" %>
<%= render "frente/termos" %>
<hr>
